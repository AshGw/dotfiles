[core]
	editor = nvim --wait

[alias]
    p  = push origin
    pu  = pull origin
    st  = status
    df  = diff
    c = commit -am
    ci  = commit -s
    w   = whatchanged --abbrev-commit
    ls  = ls-files
    unadd = reset HEAD
    unstage = reset HEAD --
    last = log -1 HEAD
    amend = commit --amend
    gr  = log --graph --pretty=format:'%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    grd = log --graph --pretty=format:'%C(auto)%h -%d %s %Cgreen(%ci) %C(bold blue)<%an>%Creset' --abbrev-commit